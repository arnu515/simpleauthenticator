// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  email    String
  password String

  @@map("users")
}

model JWTToken {
  id    String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  token String @unique

  @@map("tokens")
}
